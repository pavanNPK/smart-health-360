{
  "name": "smart-health-360-api",
  "version": "1.0.0",
  "description": "Clinical Hospital API - Node.js + Express + TypeScript + MongoDB",
  "main": "dist/server.js",
  "scripts": {
    "check:forbidden": "node ../scripts/check-forbidden-words.js",
    "prebuild": "node ../scripts/check-forbidden-words.js",
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "seed": "npx ts-node src/scripts/seedAdmin.ts",
    "seed:realtime": "npx ts-node src/scripts/seedRealtimeData.ts",
    "test-mail": "npx ts-node src/scripts/testMail.ts",
    "migrate:patient-visibility": "npx ts-node src/scripts/migratePatientVisibility.ts"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^7.0.9",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
